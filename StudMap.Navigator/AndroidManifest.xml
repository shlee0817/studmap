<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.whs.studmap.navigator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.whs.studmap.navigator.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.whs.studmap.navigator.POIActivity"
            android:label="@string/title_activity_poi"
            android:parentActivityName="de.whs.studmap.navigator.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.whs.studmap.navigator.MainActivity" />
        </activity>
        <activity
            android:name="de.whs.studmap.navigator.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="de.whs.studmap.navigator.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.whs.studmap.navigator.MainActivity" />
        </activity>
        <activity
            android:name="de.whs.studmap.navigator.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="de.whs.studmap.navigator.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.whs.studmap.navigator.LoginActivity" />
        </activity>
    </application>

</manifest>